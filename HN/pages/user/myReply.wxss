
.my-reply-div {
  background-color: white;
  width: 100%;
  height: auto;
  border-top: 1rpx solid #e6e6e6;
  display: flex;
  flex-direction: row;
}

.my-reply-item{
  display: flex;
  flex-direction: column;
  width: 80%;
  padding-top: 10rpx;
  padding-left: 10rpx;
  padding-right: 20rpx;
}
.my-reply-title{
  color: #3dade7;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.my-reply-text{
  color: gray;
  line-height: 1.2;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.my-reply-date{
   color: black;
   font-size: 25rpx;
}
.my-reply-btn {
  margin-top: 25rpx;
  text-align: center;
  width: 20%;
}

.my-reply-btn image {
  width: 70rpx;
  height: 70rpx;
}