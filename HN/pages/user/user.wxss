.user-back{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 250rpx;
  background-color: #d4237a;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  margin-bottom: 20rpx;
  color: #fff;
}
.userinfo-btn{
  color: #fff;
  font-size: 30rpx;
  background-color: #d4237a;
}
.user-menu{
  background-color: white;
  border-bottom: 1rpx solid #e6e6e6;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}
.user-menu-img{
  padding-left: 15rpx;
  padding-top: 6rpx;
  height: 88rpx;
  width: 88rpx;
}
.user-menu-text{
   padding-left: 15rpx;
   line-height: 2.5;
   width: 70%;
}
.user-menu-more{
  padding-top: 15rpx;
  height: 70rpx;
  width: 70rpx;
}
.signMenu{
  height: 150rpx; 
  background-color:white;
  display: flex;
  flex-direction: row;
  margin:2%;
  width:96%;
  border:1rpx solid #e6e6e6;
  border-radius:25rpx;
}
.sign-menu-item{
  width: 25%;
  align-items: center;
  display: flex;
  flex-direction: column;
}
.sign-menu-img{
  margin-top: 10rpx;
  height: 80rpx;
  width: 80rpx;
}
.sign-menu-text{
  height: 40rpx;
  font-size: 25rpx;
  color: #e05013; 
}
.zhuanfa{
  display: flex;
  flex-direction: row;
}
.zhuanfa-img{
  width: 88rpx;
  height: 88rpx;
}

