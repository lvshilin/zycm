page{
  background-color: #e6e6e6;
}
.user-back{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 300rpx;
  background-color: #d4237a;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  margin-bottom: 20rpx;
  color: #fff;
}
.userinfo-btn{
  color: #fff;
  font-size: 30rpx;
  background-color: #d4237a;
}
.user-menu{
  background-color: white;
  border-bottom: 1rpx solid #e6e6e6;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}
.user-menu-img{
  padding-left: 15rpx;
  padding-top: 6rpx;
  height: 88rpx;
  width: 88rpx;
}
.user-menu-text{
   padding-left: 15rpx;
   line-height: 2.5;
   width: 70%;
}
.user-menu-more{
  padding-top: 15rpx;
  height: 70rpx;
  width: 70rpx;
}

