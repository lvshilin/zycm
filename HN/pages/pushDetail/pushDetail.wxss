.push-detail-head {
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #e6e6e6;
}

.push-user-img {
  width: 10%;
  padding: 20rpx;
}

.pushUserImg {
  height: 80rpx;
  width: 80rpx;
}

.pushUserName {
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.push-detail-text {
  margin-top: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e6e6e6;
  font-size: 30rpx;
}

.push-detail-bottom {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  border-bottom: 2rpx solid #e6e6e6;
}

.push-detail-bottom-item {
  width: 48%;
  line-height: 2.5;
}

.push-detail-bottom-split {
  width: 2%;
  line-height: 2.5;
}

.push-detail-bottom-num {
  background-color: rebeccapurple;
  border-radius: 15rpx;
  color: white;
}
